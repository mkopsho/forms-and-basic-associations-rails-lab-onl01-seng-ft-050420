<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :artist %>
  <%= f.text_field :artist_name %><br>
  Genre <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
  Notes<br>
  <&= f.label :song_notes %>
  <input id="song_notes_1" name="song[notes][]"><br>
  <input id="song_notes_2" name="song[notes][]"><br>
  <br>

  <!-- add `song_notes_x` here once defined -->

  <%= f.submit %>
<% end %>


